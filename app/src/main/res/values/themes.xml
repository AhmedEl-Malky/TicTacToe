<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TicTacToe" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="players_name" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/players_name_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart">@drawable/person</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">@dimen/_16sdp</item>

    </style>
    <style name="Theme.TicTacToe" parent="Base.Theme.TicTacToe" />

    <style name="play_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/play_button_background</item>
        <item name="android:textSize">@dimen/_26sdp</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="player_score" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:background">@drawable/player_score_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="winner_txt" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_28sdp</item>
        <item name="android:background">@drawable/winner_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="player_name" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:background">@drawable/winner_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Game_btns" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>